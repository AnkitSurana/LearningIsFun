<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdcfff4"
    tools:context="com.example.ankitsurana.learningisfun.Numbers">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:title="@string/app_name"
        app:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
        app:popupTheme="@style/Theme.AppCompat.NoActionBar" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="57dp"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@mipmap/n1"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@mipmap/n2"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@mipmap/n3"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@mipmap/n4"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@mipmap/n5"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@mipmap/n6"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@mipmap/n7"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@mipmap/n8"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@mipmap/n9"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="130dp"

            android:id="@+id/button10"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@mipmap/n0"/>
    </GridLayout>

</RelativeLayout>
